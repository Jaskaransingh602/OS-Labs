#include <iostream>
using namespace std;

int main() {
    int n, tq;
    cin >> n;

    int bt[100], rt[100];
    for(int i=0;i<n;i++){
        cin >> bt[i];
        rt[i] = bt[i];
    }

    cin >> tq;

    int ct[100], tat[100], wt[100];
    int time = 0, completed = 0;

    while(completed < n){
        for(int i=0;i<n;i++){
            if(rt[i] > 0){
                int x = min(rt[i], tq);
                rt[i] -= x;
                time += x;

                if(rt[i] == 0){
                    ct[i] = time;
                    tat[i] = ct[i];        // AT = 0
                    wt[i]  = tat[i] - bt[i];
                    completed++;
                }
            }
        }
    }

    cout << "P\tBT\tCT\tTAT\tWT\n";
    for(int i=0;i<n;i++){
        cout << "P" << i << "\t"
             << bt[i] << "\t"
             << ct[i] << "\t"
             << tat[i] << "\t"
             << wt[i] << "\n";
    }
}
