#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;

    int bt[100];
    for(int i=0;i<n;i++) cin >> bt[i];

    // Sort by BT
    for(int i=0;i<n-1;i++){
        for(int j=i+1;j<n;j++){
            if(bt[j] < bt[i])
                swap(bt[i], bt[j]);
        }
    }

    int ct[100], tat[100], wt[100];
    int time = 0;

    for(int i=0;i<n;i++){
        time += bt[i];
        ct[i] = time;
        tat[i] = ct[i];          // AT = 0
        wt[i]  = tat[i] - bt[i];
    }

    cout << "P\tBT\tCT\tTAT\tWT\n";
    for(int i=0;i<n;i++){
        cout << "P" << i << "\t"
             << bt[i] << "\t"
             << ct[i] << "\t"
             << tat[i] << "\t"
             << wt[i] << "\n";
    }
}
